[
  {
    "name": "consul",
    "image": "consul:0.8.4",
    "portMappings": [
      {
        "containerPort": 8500,
        "hostPort": 8500,
        "protocol": "tcp"
      },
      {
        "containerPort": 8600,
        "hostPort": 8600,
        "protocol": "tcp"
      },
       {
        "containerPort": 8301,
        "hostPort": 8301,
        "protocol": "tcp"
      },
      {
        "containerPort": 8300,
        "hostPort": 8300,
        "protocol": "tcp"
      }
    ],
    "memory": 128,
    "command": [
      "agent",
      "-server",
      "-client=0.0.0.0",
      "-bootstrap-expect=3",
      "-ui",
      "-datacenter=us-east-1",
      "-retry-join-ec2-tag-key=Role",
      "-retry-join-ec2-tag-value=vault",
      "-config-dir=/consul/config",
      "-data-dir=/consul/data"
    ],
    "environment": [
      {
        "name": "CONSUL_BIND_INTERFACE",
        "value": "eth0"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "consul_config",
        "containerPath": "/consul/config",
        "readOnly": false
      },
      {
        "sourceVolume": "consul_data",
        "containerPath": "/consul/data",
        "readOnly": false
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "us-east-1",
        "awslogs-group": "${log_group}"
      }
    }
  }
]
